<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context="com.example.novan.tugasakhir.home_activity.InputMedicineActivity"
    android:orientation="horizontal">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_primary_color"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/toolbar"
        app:titleTextColor="@color/custom_text"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/appBarLayout"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/drugs" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add_objects"
                android:layout_marginTop="33dp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/dropper"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/clock"
                android:layout_marginTop="37dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_below="@+id/appBarLayout"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.90"
            android:layout_marginLeft="10dp">

            <!-- add some padding -->
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                float:fletPadding="0dp">

                <EditText
                    android:id="@+id/input_medicine"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="Medicine Name"
                    android:maxLines="1"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <!-- add some padding -->
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                float:fletPadding="0dp">

                <EditText
                    android:id="@+id/input_number_medicine"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Medicine's Amount" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <!-- add some padding -->
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                float:fletPadding="0dp">

                <EditText
                    android:id="@+id/input_dosage_medicine"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Medicine's Dosage" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <!-- add some padding -->
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                float:fletPadding="0dp">

                <EditText
                    android:id="@+id/input_time_medicine"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="Medicine's Time per Day"
                    android:inputType="number" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="?android:borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/custom_button_first"
        android:fontFamily="sans-font_family_medium"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/custom_text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal" />

</RelativeLayout>
