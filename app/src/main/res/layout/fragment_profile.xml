<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_primary_color"
        >

        <TextView
            android:id="@+id/name_rofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:fontFamily="sans-serif"
            android:text="Andika eks-Kangen Band"
            android:textColor="@color/custom_text"
            android:textSize="24sp"
            android:typeface="sans"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/name_rofile"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/user" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/id_contacts"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/fab_profile"
            android:layout_toRightOf="@+id/fab_profile"
            android:text="contacts"
            android:textColor="@color/custom_primary_text" />

        <TextView
            android:id="@+id/friendlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="friendlist"
            android:textColor="@color/custom_primary_text"
            android:layout_alignBaseline="@+id/contacts"
            android:layout_alignBottom="@+id/contacts"
            android:layout_toLeftOf="@+id/fab_profile"
            android:layout_toStartOf="@+id/fab_profile"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" />

        <TextView
            android:id="@+id/id_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/id_friendlist"
            android:layout_alignBottom="@+id/id_friendlist"
            android:layout_alignEnd="@+id/contacts"
            android:layout_alignRight="@+id/contacts"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:text="10"
            android:textColor="@color/custom_primary_color"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_friendlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="42dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:text="11"
            android:textColor="@color/custom_primary_color"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_above="@+id/fab_profile"
            android:layout_toLeftOf="@+id/fab_profile"
            android:layout_toStartOf="@+id/fab_profile" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:src="@drawable/edit"
            app:backgroundTint="@color/custom_button_first"
            app:fab_type="normal" />
    </RelativeLayout>


</LinearLayout>