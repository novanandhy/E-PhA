<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:id="@+id/rowshowmedicine"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <TextView
                android:id="@+id/stockmedicine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21"
                android:gravity="center"
                android:textSize="100sp"
                android:textColor="@color/custom_primary_color"/>
            <TextView
                android:id="@+id/medicine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OBAT 1"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/custom_primary_text"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <TextView
                android:id="@+id/stockmedicine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="19"
                android:textColor="@color/custom_primary_color"
                android:textSize="100sp" />

            <TextView
                android:id="@+id/medicine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OBAT 2"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:textColor="@color/custom_primary_text"/>
        </LinearLayout>

    </TableRow>


</TableLayout>